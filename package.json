    "@rollup/plugin-typescript": "^10.0.1",
    "@types/node": "^18.11.11",
    "@types/sharp": "^0.31.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "fs-extra": "^11.1.0",
    "husky": "^8.0.2",
    "lint-staged": "^13.0.4",
    "prettier": "^2.8.0",
    "prettier-plugin-organize-imports": "^3.2.1",
    "rollup": "^3.5.0",
    "tslib": "^2.4.1",
    "typescript": "^4.6.4"
  },
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^5.1.1",
    "axios": "^1.2.2",
    "axios-retry": "^3.3.1",
    "form-data": "^4.0.0",
    "handlebars": "^4.7.7",
    "sharp": "^0.31.2"
  }
